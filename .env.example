# ===========================================
# Astro Starter Template - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# Lines starting with # are comments
# ===========================================

# -------------------------------------------
# Site Configuration
# -------------------------------------------
# PUBLIC_SITE_URL=https://your-site.com

# -------------------------------------------
# Firebase Configuration (for Auth & Database)
# -------------------------------------------
# Get these from Firebase Console > Project Settings > General > Your apps
# https://console.firebase.google.com/

PUBLIC_FIREBASE_API_KEY=
PUBLIC_FIREBASE_AUTH_DOMAIN=
PUBLIC_FIREBASE_PROJECT_ID=
PUBLIC_FIREBASE_STORAGE_BUCKET=
PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
PUBLIC_FIREBASE_APP_ID=

# -------------------------------------------
# Analytics Configuration
# -------------------------------------------

# Google Analytics 4
# Get from: https://analytics.google.com/ > Admin > Data Streams > Measurement ID
PUBLIC_GA4_MEASUREMENT_ID=

# Microsoft Clarity
# Get from: https://clarity.microsoft.com/ > Settings > Project ID
PUBLIC_CLARITY_PROJECT_ID=

# Mixpanel (optional)
# Get from: https://mixpanel.com/ > Settings > Project Token
PUBLIC_MIXPANEL_TOKEN=

# Enable analytics in development (default: false)
# Set to "true" to test analytics in dev mode
PUBLIC_ENABLE_DEV_ANALYTICS=false

# -------------------------------------------
# Error Tracking Configuration
# -------------------------------------------

# Sentry DSN
# Get from: https://sentry.io/ > Settings > Client Keys (DSN)
PUBLIC_SENTRY_DSN=

# Sentry Environment (optional, defaults to 'development')
PUBLIC_SENTRY_ENVIRONMENT=production

# Enable Sentry in development (default: false)
PUBLIC_SENTRY_DEV_ENABLED=false

# -------------------------------------------
# AI Configuration
# -------------------------------------------
# At least one AI provider API key is required for AI features

# OpenAI (recommended - most features supported)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic (Claude models)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Google AI (Gemini models)
# Get from: https://aistudio.google.com/apikey
GOOGLE_GENERATIVE_AI_API_KEY=

# OpenRouter (optional - unified gateway for 600+ models)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# -------------------------------------------
# API Routes / Cloudflare Workers Secrets
# -------------------------------------------
# These are NOT prefixed with PUBLIC_ because they should
# only be accessible server-side (in API routes)
# Set these in Cloudflare Pages dashboard or via wrangler:
#   npx wrangler pages secret put SECRET_NAME --project-name=your-project

# -------------------------------------------
# Email Service (Resend)
# -------------------------------------------
# Get from: https://resend.com/api-keys
RESEND_API_KEY=

# Your verified sender email (must verify domain in Resend)
RESEND_FROM_EMAIL=hello@yourdomain.com

# -------------------------------------------
# Payments (Polar.sh)
# -------------------------------------------
# Polar.sh acts as Merchant of Record (handles taxes globally)
# Get from: https://polar.sh/ > Settings > Developers

# API Access Token
POLAR_ACCESS_TOKEN=

# Organization ID (from dashboard URL or settings)
POLAR_ORGANIZATION_ID=

# Webhook Secret (create webhook at Polar dashboard)
# Webhook URL: https://your-site.com/api/payments/webhook
POLAR_WEBHOOK_SECRET=

# Product/Price IDs (create products in Polar dashboard)
POLAR_PRO_PRODUCT_ID=
POLAR_PRO_PRICE_ID=
POLAR_ENTERPRISE_PRODUCT_ID=
POLAR_ENTERPRISE_PRICE_ID=

# Usage-based billing meter ID (optional, for AI token billing)
# Create a meter in Polar dashboard for tracking AI usage
POLAR_TOKEN_METER_ID=

# -------------------------------------------
# Deployment (GitHub Actions)
# -------------------------------------------
# These should be set as GitHub repository secrets, not in .env
# CLOUDFLARE_API_TOKEN=
# CLOUDFLARE_ACCOUNT_ID=
