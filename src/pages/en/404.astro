---
export const prerender = true;
/**
 * 404 Not Found Page (English)
 */
import BaseLayout from "@/layouts/BaseLayout.astro";
import { useTranslations } from "@/i18n/utils";

const t = useTranslations("en");
---

<BaseLayout title="Page Not Found" noindex={true}>
  <main class="flex min-h-[70vh] items-center justify-center px-4">
    <div class="max-w-md text-center">
      <h1 class="mb-4 text-9xl font-bold text-primary-500">404</h1>
      <h2
        class="mb-4 text-2xl font-semibold text-secondary-900 dark:text-white"
      >
        {t("errors.404.title")}
      </h2>
      <p class="mb-8 text-secondary-600 dark:text-secondary-400">
        {t("errors.404.description")}
      </p>
      <div class="flex flex-col justify-center gap-4 sm:flex-row">
        <a href="/en" class="btn btn-primary">
          {t("errors.404.cta")}
        </a>
        <button onclick="history.back()" class="btn btn-secondary">
          ‚Üê {t("common.back")}
        </button>
      </div>
    </div>
  </main>
</BaseLayout>
